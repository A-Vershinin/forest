include ../blocks/_user
  
section.welcome
  .welcome__bg
    picture
      source(type="image/webp" srcset="img/bg/forest-desktop.webp 1x, img/bg/forest-desktop.webp 2x")
      img(src="img/bg/forest-desktop.jpg" srcset="img/bg/forest-desktop.jpg 2x"
       alt="wecolme background", class="welcome__bg-img")
  .welcome__box
    .welcome__box-inner
      .welcome__info
        .welcome__user
          +user()
        .welcome__socials      
          include ../blocks/_socials
      nav.welcome__nav
        a(href="works.html").btn.welcome__nav-link Мои работы
        a(href="about.html").btn.welcome__nav-link Обо мне
  .welcome__copyright
    include ../blocks/_copyright
    
